<%= form_for(@item, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @item.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h4>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
      <%= f.text_field :name, class: "form-control", :placeholder => "Name" %>
    </div>
  </div>
  <div class="form-group">    
    <div class="col-sm-offset-3 col-sm-6">
      <%= f.text_field :description, class: "form-control", :placeholder => "Description"  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
      <%= f.text_field :price, class: "form-control", :placeholder => "Price" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-6">
      <%= f.submit :class => "btn btn-md btn-success" %>
    </div>
  </div>
<% end %>
