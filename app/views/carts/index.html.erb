<div class="page-header">
  <%= link_to root_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Show cart</h1>
</div>
  
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>
              <th>Quantity<th>
              <% if current_user and current_user.is_admin? %>
                <th></th>
              <% end %>
        </tr>
      </thead>

      <tbody>
        <% total = 0 %>
        <% @cart.items.group(:item_id).count.each do |item_id, quantity | %>
          <tr>
              <% item = Item.find(item_id) %>
              <td><%= item.name %></td>
              <td><%= item.description %></td>
              <td><%= item.price %></td>
              <td><%= quantity %></td>
              <% total = total + (item.price * quantity) %>
              <% if current_user %>
                <td><%= link_to 'Remove', cart_path(item: item_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
  
  <% if @cart.open? then %>
    Botao finaliza compra total <%= total %>
  <% end %>

</dl>
